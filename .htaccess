<IfModule mod_rewrite.c>
Options +FollowSymLinks
RewriteEngine on
RewriteBase /edging/

# LOCALHOST DEVELOPMENT - Comment out these redirects for local testing
# RewriteCond %{HTTP_HOST} !^www\. [NC]
# RewriteRule ^(.*)$ http://www.edge2edgecleaning.com.au/$1 [L,R=301]

# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://www.edge2edgecleaning.com.au/$1 [L,R=301]

# LIVE PRODUCTION - Uncomment these redirects when deploying to live server
# RewriteCond %{HTTP_HOST} !^www\. [NC]
# RewriteRule ^(.*)$ http://www.edge2edgecleaning.com.au/$1 [L,R=301]
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://www.edge2edgecleaning.com.au/$1 [L,R=301]

# Special rules for specific pages
RewriteRule ^garage-door/(.*).php$ ./services-city.php?city=$1 [L]
RewriteRule ^sitemap.xml$ sitemap.php [L]

# Main rule to add .php extension to URLs without extension
# This checks if the file doesn't exist and if it's not a directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^\.]+)$ $1.php [NC,L]

</IfModule>

